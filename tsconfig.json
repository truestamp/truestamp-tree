{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "examples/"
  ],
}
